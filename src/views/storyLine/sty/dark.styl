  .detail {
    // padding: 15px
    box-shadow: 0 0 30px 0 #4852ff;
    background: #07133cb3;
  }
  
  .detail-name-border {
    position: absolute;
    width: 150%;
    height: 6px;
    bottom: 2px;
    background: linear-gradient(270deg, rgba(248, 115, 115, 0) 0%, #2252d6 100%);
    border-radius: 3px;
    opacity: 0.7;
    bottom: -4px;
  }


  
  .detail-business-type {
    background: #fff;
  }

  .detail-kpi {
    color #000
    background: #fff;
  }

  .box-fotter {
    position: absolute;
    bottom: 0;
    padding: 10px;
    display: grid;
    /* justify-content: center; */
