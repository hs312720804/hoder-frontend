    /* align-items: center; */
    /* grid-template-rows: auto; */
    width: 100%;
    box-sizing: border-box;
  }

  .d-info {
    font-size: 13px;
    display: grid;
    grid-template-columns: 83px auto;
    grid-template-rows: repeat(3, 30px);
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    margin: 20px 0 39px 0;
    width: 68%;
    
    color: rgba(255,255,255,0.5);
  }




  .target-img
